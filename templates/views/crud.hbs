
    {{!-- header code --}}
    {{>header}}
    {{!-- Navbar Code --}}
    {{>navbar}}
    <h1>Welcome to Employee Page..</h1>
     <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-primary text-center">Add New Employee</h2>

                <form method="post">
                    <div class="mb-3">
                        <label for="ename" class="form-label">Employee Name</label>
                        <input type="text" class="form-control" id="ename" name="ename" placeholder="Enter Full Name">
                    </div>
                    <div class="mb-3">
                        <label for="department" class="form-label">Department Name</label>
                        <input type="text" class="form-control" id="department" name="department" placeholder="Enter Age">
                    </div>
                    <div class="mb-3">
                        <label for="salary" class="form-label">Salary</label>
                        <input type="text" class="form-control" id="salary" name="salary" placeholder="Enter Fees">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-info text-center">List of Employee</h2>
                <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Emp Name</th>
                        <th scope="col">Dept Name</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        {{#each docs}}
                      <tr>
                        <td> 1  </td>
                        <td> {{ ename }}  </td>
                        <td> {{department}}</td>
                        <td> {{salary}}</td>
                        <td>
                            <form action="/crud/edit/{{this._id}}" method="get" class="d-inline">
                                <button type="update" class="btn btn-warning">UP</button>
                            </form>
                            <form action="/crud/delete/{{this._id}}" method="post" class="d-inline">
                                <button type="delete" class="btn btn-danger">DEL</button>
                            </form>
                        </td>
                      </tr>
                      {{/each}}

                    </tbody>
                  </table>
            </div>
        </div>
    </div>

{{!-- footer code --}}
    {{>footer}}